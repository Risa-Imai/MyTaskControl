<div class="container">
  <div class"row center-block">
    <div class="col-12">
    <%= form_with model: [task, task_comment], local: false do |f| %>
      <div class="form-group">
        <%= f.text_area :comment, rows: "6", placeholder: "コメント", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "送信", class: "btn btn-success text-right" %>
      </div>
    <% end %>
    </div>
  </div>
</div>

