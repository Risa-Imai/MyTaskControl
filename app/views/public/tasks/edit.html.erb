<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h1 class="text-center">Task edit</h1>
      <%= form_with model: @task, method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "タグ" %>
          <!-- 登録されているタグをフォームに初期値として表示 -->
          <%= f.text_field :tag_name, value: @task.tags.pluck(:name).join(","), class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "進捗" %>
          <%= f.select :progress_status, Task.progress_statuses_i18n.invert, {prompt: false}, class: "form-control" %>
        </div>
        <div class="text-center">
          <%= f.submit "Update", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>