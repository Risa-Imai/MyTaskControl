<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h3 class="text-center"><%= @task.title %></h3>
      <div class="row">
        <% @task.tags.each do |tag| %>
          <p class="bg-primary text-light text-center col-2 offset-1 show_tag"><%= tag.name %></p>
        <% end %>
      </div>
      <div class="d-flex align-items-center task_show">
        <strong class="<%= @status %> col-3 text-center status ml-3"><%= @status_i18n %></strong>
        <% if @task.customer == current_customer %>
          <%= link_to "編集", edit_task_path(@task), class: "btn btn-success mx-5" %>
          <%= link_to "削除", task_path(@task), method: :delete, data: { confirm: "タスクを消しますか？消すと元に戻せません" }, class: "btn btn-danger" %>
        <% end %>
        <div id="favorite_btn_<%= @task.id %>" class="ml-5">
          <%= render "public/favorites/favorite", task: @task %>
        </div>
      </div>
      <div class="text-right">登録日：<%= @task.created_at.to_s(:datetime_jp) %>
        <div id="comments_count">
          <%= render "public/task_comments/count", task: @task %>
        </div>
      </div>
    </div>
    <div class="comment center-block">
      <div>
        <%= render "public/task_comments/form", task: @task, task_comment: @task_comment %>
      </div>
    </div>
    <div id="comments_area" class="p-3">
      <%= render "public/task_comments/index", task_comments: @task_comments %>
    </div>
  </div>
</div>

