<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>タスク詳細</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to(@task.customer) do %>
              <%= image_tag @task.customer.get_customer_image(100, 100) %><br>
              <%= @task.customer.full_name %>
            <% end %>
          </td>
          <td><%= @task.title %></td>
          <td class=<%= @status %>><%= @status_i18n %></td>
          <% if @task.customer == current_customer %>
          <td><%= link_to "編集", edit_task_path(@task), class: "btn btn-outline-success" %></td>
          <td><%= link_to "削除", task_path(@task), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-outline-danger" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>