<div class="container">
  <h1 class="text-center">会員のタスク一覧</h1>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th></th>
        <th>タスク</th>
        <th>進捗</th>
        <th>登録日</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td>
            <%= link_to (task.customer) do %>
            <%= image_tag task.customer.get_customer_image(100, 100) %>
            <% end %>
          </td>
          <td><h5><strong><%= link_to task.title, task_path(task.id) %></strong></h5></td>
          <td class=<%= task.progress_status %>><%= task.progress_status_i18n %></td>
          <td><%= task.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          <td>
            <% if task.favorited_by?(current_customer) %>
              <p>
                <%= link_to task_favorites_path(task), method: :delete do %>
                  <i class="fas fa-heart" style="color: #FF367F"></i> <%= task.favorites.count %>いいね
                <% end %>
              </p>
            <% else %>
              <p>
                <%= link_to task_favorites_path(task), method: :post do %>
                  <i class="far fa-heart" style="color: #FF367F"></i> <%= task.favorites.count %>いいね
                <% end %>
              </p>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
