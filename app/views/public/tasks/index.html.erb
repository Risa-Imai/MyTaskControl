<div class="container">
  <%= form_with url: task_search_path, method: :get do |f| %>
  <div class="form-group">
    <%= f.text_field :keyword, class: "form-control col-md-3", placeholder: "#{@keyword}" %>
  </div>
  <%= f.submit "Search", class: "btn btn-outline-dark" %>
  <% end %>
  <span><%= @keyword %> で検索中</span>
  <h1 class="text-center mb-5">Members Tasks</h1>
  <div class="my-3">
    <% @tag_list.each do |tag| %>
      <% if tag.tasks.present? %>
        <%= link_to tag_search_path(tag_id: tag.id), class: "btn btn-outline-primary" do %>
          <%= tag.name %>
          (<%= tag.tasks.count %>)
        <% end %>
      <% end %>
    <% end %>
  </div>

  <div class="d-flex flex-wrap">
    <% @tasks.each do |task| %>
    <div class="card border-dark mb-3 mx-auto text-center" style="width: 16rem">
      <div class="card-body text-dark">
        <div class="mb-3">
          <%= link_to (task.customer) do %>
          <%= image_tag task.customer.get_customer_image(50, 50), class: "card-link rounded-circle" %>
          <%= task.customer.full_name %>
          <% end %>
        </div>
        <div>
          <h5><strong><%= link_to task.title, task_path(task.id) %></strong></h5>
        </div>
        <div class=<%= task.progress_status %>>
          <p><%= task.progress_status_i18n %></p>
        </div>
        <div>
          <%= task.created_at.to_s(:datetime_jp) %>
        </div>
        <div>
          <span><%= pluralize(task.task_comments.count, "comment") %></span>
        </div>
        <div>
          <div id="favorite_btn_<%= task.id %>">
            <%= render "public/favorites/favorite", task: task %>
          </div>
          <div>
            <!--投稿に紐付くタグを取り出す-->
            <% task.tags.each do |tag| %>
              <p class="badge badge-primary"><%= tag.name  %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<%= paginate @tasks %>