<div class="container">
  <div class="row">
    <%= render "public/shared/error_messages", resource: resource %>
  </div>
  <div class="container">
    <div class="card card-container card-class">
      <img class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
      <%= form_with model: @customer, url: customer_registration_path, id: "new_customer", class: "new_customer" do |f| %>
    <div class="form-group">
      <%= f.label "名前" %>
      <%= f.text_field :last_name, autocomplete: "last_name", autofocus: true, placeholder: "田中", class: "form-control mb-2" %>
      <%= f.text_field :first_name, autocomplete: "first_name",autofocus: true, placeholder: "太郎", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "メールアドレス" %>
      <%= f.email_field :email, autocomplete: "email", autofocus: true, placeholder: "sample@example.com", class: "form-control" %>
    </div>
    <div class="form-group">
      <div class="password-form">
        <%= f.label "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "パスワード(確認用)" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
    <div>
      <%= f.submit "会員登録", class: "btn btn-block btn-success btn-signin" %>
    </div>
    <div class="mt-3">
      <%= link_to "Googleで登録", customer_google_oauth2_omniauth_authorize_path, method: :post, class: "btn btn-block btn-success btn-signin text-align-center" %>
    </div>
  <% end %>
    <p class="mt-3">
      <strong><%= render "public/shared/links" %></strong>
    </p>
  </div>
  </div>
</div>
