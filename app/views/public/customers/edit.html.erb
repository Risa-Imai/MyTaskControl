<div class="container">
  <div class="row">
    <%= render "layouts/errors", model: @customer %>
  </div>
  <h2 class="text-center">会員情報編集</h2>
  <div class="container">
    <div class="card card-container card-class">
    <%= image_tag @customer.get_customer_image(150, 150), class: "profile-img-card" %>
    <%= form_with model: @customer, method: :patch do |f| %>
      <div class="form-group">
        <%= f.label "名前" %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "プロフィール画像" %>
        <%= f.file_field :customer_image, class: "form-control-image", accept: "image/*" %>
      </div>
      <div class="form-group">
        <%= f.label "自己紹介" %>
        <%= f.text_area :introduction, rows: "4", class: "form-control" %>
      </div>
      <div class="form-group text-center">
        <%= f.submit "変更を保存", class: "btn btn-secondary" %>
        <%= link_to "退会する", customer_unsubscribe_path(@customer), class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>