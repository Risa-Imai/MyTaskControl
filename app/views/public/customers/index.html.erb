<div class="container px-5 px-sm-0">
  <div class="row">
    <h2>会員一覧</h2>
    <% @customers.each do |customer| %>
      <table class="table">
        <thead>
          <th></th>
          <th>名前</th>
          <th colspan="3"></th>
        </thead>
        <tbody>
          <tr>
            <td class="col-3 offset-1"><%= image_tag customer.get_customer_image(100,100) %></td>
            <td class="col-3"><%= customer.full_name %></td>
            <td class="col-3"><%= link_to "詳細", customer_path(customer.id) %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</div>