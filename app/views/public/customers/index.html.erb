<div class="container px-5 px-sm-0">
  <div class="row">
    <h2>会員一覧</h2>
      <table class="table">
        <thead>
          <th></th>
          <th>名前</th>
          <th colspan="3"></th>
        </thead>
        <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= image_tag customer.get_customer_image(100,100) %></td>
            <td><%= customer.full_name %></td>
            <td><%= link_to "詳細", customer_path(customer.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>