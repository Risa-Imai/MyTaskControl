<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-5">
      <%= %>
    <h2>インフォメーション</h2>
      <%= render "public/customers/info", customer: current_customer %>
    <h2 class="mt-3">新規タスク</h2>
      <%= %>
    </div>
    <div class="col-mf-6 offset-md-1">
      <h2>会員一覧</h2>
      <% @customers.each do |customer| %>
        <table class="table">
          <thead>
            <th></th>
            <th>名前</th>
            <th colspan="3"></th>
          </thead>
          <tbody>
            <tr>
              <td><%= image_tag customer.get_customer_image(200,200) %></td>
              <td><%= customer.full_name %></td>
              <td><%= link_to "詳細", customer_path(customer.id) %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>