<div class="container px-5 px-sm-0">
  <h1 class="text-center">Favorite Tasks</h1>
  <table class="table table-hover table-inverse">
    <thead>
      <tr class="table-center">
        <th>投稿者</th>
        <th>Task</th>
        <th>進捗</th>
        <th>登録日</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @favorite_tasks.each do |task| %>
        <tr class="table-center">
          <td>
            <%= link_to customer_path(task.customer_id) do %>
              <%= image_tag task.customer.get_customer_image(100, 100) %><br>
              <%= task.customer.full_name %></td>
            <% end %>
          </td>
          <td><%= link_to task.title, task_path(task.id) %></td>
          <td class=<%= task.progress_status %>><%= task.progress_status_i18n %></td>
          <td><%= task.created_at.to_s(:datetime_jp) %></td>
          <td id="favorite_btn_<%= task.id %>">
            <%= render "public/favorites/favorite", task: task %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @favorites %>