<h3>Infomation</h3>
  <div class="row">
    <div class="col-lg-6">
      <div>
        <%= image_tag @customer.get_customer_image(150, 150) %>
      </div>
      <div>
        <h4>Name</h4>
        <h5><%= @customer.full_name %></h5>
      </div>
      <div class="introduction">
        <h4>Introduction</h4>
        <span><%= @customer.introduction %></span>
      </div>
      <span>
        <% if @customer == current_customer %>
          <% if @customer.email != "guest@example.com" %>
            <%= link_to "Edit", edit_customer_path(id: @customer), class: "btn btn-secondary" %>
          <% end %>
        <% end %>
        <%= link_to "いいね一覧", customer_favorites_path(customer_id: @customer), class: "btn btn-success" %>
      </span>
    </div>
    <div class="offset-lg-1 col-lg-5">
      <h3>New task</h3>
      <%= form_with model: @task do |f| %>
        <div class="form-group">
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Create tag" %><br>
          <%= f.label "例)Zoo,calligraphy,study" %>
          <%= f.text_field :tag_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.select :progress_status, Task.progress_statuses_i18n.invert, {prompt: false}, class: "form-control" %>
          <%= f.submit "投稿", class: "btn btn-primary mt-3" %>
        </div>
      <% end %>
    </div>
      <h3>Tasks</h3>
        <% if @customer_tag_list.present? %>
          <% @customer_tag_list.each do |tag| %>
            <%= tag.name %>
            (<%= tag.tasks.where(customer_id: @customer.id).count %>)
          <% end %>
        <% else %>
        <% end %>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Task</th>
            <th>進捗</th>
            <th>登録日</th>
            <th>コメント数</th>
            <th></th>
            <th>Tag</th>
          </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td><strong><%= link_to task.title, task_path(task.id) %></strong></td>
              <td class=<%= task.progress_status %>><%= task.progress_status_i18n %></td>
              <td><%= task.created_at.to_s(:datetime_jp) %></td>
              <td><%= task.task_comments.count %></td>
              <td>
                <% if task.favorited_by?(current_customer) %>
                  <p>
                    <%= link_to task_favorites_path(task), method: :delete do %>
                      <i class="fas fa-heart" style="color: #FF367F"></i> <%= task.favorites.count %>
                    <% end %>
                  </p>
                <% else %>
                  <p>
                    <%= link_to task_favorites_path(task), method: :post do %>
                      <i class="far fa-heart" style="color: #FF367F"></i> <%= task.favorites.count %>
                    <% end %>
                  </p>
                <% end %>
              </td>
              <td>
                <!--投稿に紐付くタグを取り出す-->
                <% task.tags.each do |tag| %>
                  <%= tag.name %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

<%= paginate @tasks %>
