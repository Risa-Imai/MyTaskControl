<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-5">
      <h3>インフォメーション</h3>
      <table class="table">
        <tr><%= image_tag @customer.get_customer_image(200,200) %></tr>
        <tr>
          <th>名前</th>
          <th><%= @customer.full_name %></th>
        </tr>
        <tr>
          <th>自己紹介</th>
          <th><%= @customer.introduction %></th>
        </tr>
      </table>
      <% if @customer == current_customer %>
        <% if @customer.email != "guest@example.com" %>
          <div class="row">
            <%= link_to edit_customer_path(@customer), class: "btn btn-outline-secondary btn-block" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="col-md-6 offset-md-1">
      <%= form_with model: @task do |f| %>
        <div class="form-group">
          <h3>新しいタスク</h3>
          <%= f.text_field :title, class: "form-control col-5" %>
        </div>
        <div class="form-group">
          <%= f.select :progress_status, Task.progress_statuses_i18n.invert, {prompt: false}, class: "form-control col-5" %>
          <%= f.submit "投稿", class: "btn btn-outline-primary col-3 offset-1 mt-3" %>
        </div>
      <% end %>
      <h3>タスク一覧</h3>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>タスク</th>
            <th>進捗</th>
            <th>登録日</th>
          </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td>
                <%= link_to (task.customer) do %>
                <%= image_tag task.customer.get_customer_image(100, 100) %>
                <% end %>
              </td>
              <td><h4><strong><%= link_to task.title, task_path(task.id) %></strong></h4></td>
              <td class=<%= task.progress_status %>><%= task.progress_status_i18n %></td>
              <td><%= task.created_at.strftime('%Y/%m/%d %H:%M') %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>