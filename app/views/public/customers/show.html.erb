<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-5">
      <h3>Infomation</h3>
      <table class="table">
        <tr><%= image_tag @customer.get_customer_image(200,200) %></tr>
        <tr>
          <th>Name</th>
          <th><%= @customer.full_name %></th>
        </tr>
        <tr>
          <th>Infomation</th>
          <th><%= @customer.introduction %></th>
        </tr>
      </table>
      <% if @customer == current_customer %>
        <% if @customer.email != "guest@example.com" %>
          <div class="row">
            <%= link_to edit_customer_path(id: @customer), class: "btn btn-outline-secondary btn-block col-5" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          </div>
        <% end %>
      <% end %>
      <p><%= link_to "いいね一覧", customer_favorites_path(customer_id: @customer), class: "btn btn-outline-success mt-3" %></p>
    </div>
    <div class="col-md-6">
      <h3>New task</h3>
      <%= form_with model: @task do |f| %>
        <div class="form-group">
          <%= f.text_field :title, class: "form-control col-5" %>
        </div>
        <div class="form-group">
          <%= f.label "Create tag" %><br>
          <%= f.label "例)Zoo,calligraphy,study" %>
          <%= f.text_field :tag_name, class: "form-control col-5" %>
        </div>
        <div class="form-group">
          <%= f.select :progress_status, Task.progress_statuses_i18n.invert, {prompt: false}, class: "form-control col-5" %>
          <%= f.submit "投稿", class: "btn btn-outline-primary col-3 offset-1 mt-3" %>
        </div>
      <% end %>
      <h3>Tasks</h3>
        <% if @customer_tag_list.present? %>
          <% @customer_tag_list.each do |tag| %>
            <%= tag.name %>
            (<%= tag.tasks.where(customer_id: @customer.id).count %>)
          <% end %>
        <% else %>
        <% end %>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Task</th>
            <th>進捗</th>
            <th>登録日</th>
            <th>コメント数</th>
            <th></th>
            <th>Tag</th>
          </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td><strong><%= link_to task.title, task_path(task.id) %></strong></td>
              <td class=<%= task.progress_status %>><%= task.progress_status_i18n %></td>
              <td><%= task.created_at.to_s(:datetime_jp) %></td>
              <td><%= task.task_comments.count %></td>
              <td>
                <% if task.favorited_by?(current_customer) %>
                  <p>
                    <%= link_to task_favorites_path(task), method: :delete do %>
                      <i class="fas fa-heart" style="color: #FF367F"></i> <%= task.favorites.count %>
                    <% end %>
                  </p>
                <% else %>
                  <p>
                    <%= link_to task_favorites_path(task), method: :post do %>
                      <i class="far fa-heart" style="color: #FF367F"></i> <%= task.favorites.count %>
                    <% end %>
                  </p>
                <% end %>
              </td>
              <td>
                <!--投稿に紐付くタグを取り出す-->
                <% task.tags.each do |tag| %>
                  <%= tag.name %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= paginate @tasks %>
