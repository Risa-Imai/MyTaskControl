<div class="container">
  <div class="mb-5 col-5 text-center">
    <h4><%= @customer.full_name %>さんの会員情報編集</h4>
  </div>
  <div>
    <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
      <div class="form-group row">
        <%= f.label "会員ID", class: "col-3" %>
        <%= f.label @customer.id, class: "col-3" %>
      </div>
      <div class="form-group">
        <%= f.label "プロフィール画像" %>
        <%= f.file_field :customer_image, class: "form-control-file user_image", accept: "image/*" %>
      </div>
      <div class="form-group row">
        <%= f.label "名前", class: "col-3" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control col-3 mr-3" %>
        <%= f.text_field :first_name, class: "form-control col-3" %>
      </div>
      <div class="form-group row">
        <%= f.label "メールアドレス", class: "col-3" %>
        <%= f.email_field :email, autofocus: true, class: "form-control col-3" %>
      </div>
      <div class="form-group row">
        <%= f.label :is_delete, "会員ステータス", class: "col-3" %>
        <div>
          <%= f.radio_button :is_delete, false %>
          <%= f.label :is_delete, "有効", class:"mr-3" %>
          <%= f.radio_button :is_delete, true %>
          <%= f.label :is_delete, "退会" %>
        </div>
      </div>
      <div>
        <%= f.submit "変更を保存", class: "btn btn-outline-secondary mt-3 mb-3 offset-3" %>
      </div>
    <% end %>
  </div>
</div>