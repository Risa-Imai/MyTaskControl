<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2><%= @task.customer.full_name %>さんのタスク詳細</h2>
      <table class="table">
        <tr>
          <td><h4><strong><%= @task.title %></strong></h4></td>
          <td class=<%= @status %>><%= @status_i18n %></td>
          <td><%= link_to "削除", admin_task_path(@task), method: :delete, data: { confirm: "タスクを消しますか？消すと元に戻せません" }, class: "btn btn-outline-danger" %></td>
          <td><%= @task.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        </tr>
      </table>
    </div>
  </div>
</div>