<div class="container">
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>タスク</th>
        <th>進捗</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td>
            <%= link_to (task.customer) do %>
            <%= image_tag task.customer.get_customer_image(100, 100) %>
            <% end %>
          </td>
          <td><h5><strong><%= link_to task.title, admin_task_path(task.id) %></strong></h5></td>
          <td class=<%= task.progress_status %>><%= task.progress_status_i18n %></td>
          <td>
            <% unless task.favorites.count == 0 %>
              <p><i class="fas fa-heart" style="color: #FF367F"></i> <%= task.favorites.count %>いいね</p>
            <% else %>
              <p><i class="far fa-heart" style="color: #FF367F"></i> <%= task.favorites.count %>いいね</p>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>